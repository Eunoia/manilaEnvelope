%h3
  Create Document

= form_for @document do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :case_number
    = f.text_field :case_number, {required:"required"}
  .field
    = f.label "Upload Document"
    = f.hidden_field :filepicker_url
    %input#ajaxUpload{type:"file"}
    /= f.filepicker_field :filepicker_url, onchange: "foo()", services: "COMPUTER", dragdrop: false
    #uploadFinished
      &nbsp;
  .field
    = f.label :date_opened
    = f.text_field :date_opened, {"id"=>"datepicker",required:"required"}
  .field
    = f.label :case_name
    = f.text_field :case_name, placeholder: "Estate of ......", required:"required"
  .actions
    %button#saveButton.btn.btn-default{disabled:"disabled"} Save Document

